{
    "manifest_version": 2,
    "name": "__MSG_name__",
    "version": "0.0.5",
    "description": "__MSG_description__",
    "author": "Staś Małolepszy",
    "homepage_url": "https://github.com/stasm/detach-tabs",
    "permissions": [
        "contextMenus",
        "tabs"
    ],
    "default_locale": "en",
    "icons": {
        "48": "icon.svg",
        "96": "icon.svg"
    },
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "commands": {
        "detach-this-tab": {
            "suggested_key": {
                "default": "Ctrl+Space"
            },
            "description": "__MSG_detach-this-tab-key-shortcut__"
        },
        "detach-to-the-right": {
            "suggested_key": {
                "default": "Ctrl+Shift+Space"
            },
            "description": "__MSG_detach-to-the-right-key-shortcut__"
        },
        "detach-same-origin": {
            "suggested_key": {
                "default": "Ctrl+Alt+L"
            },
            "description": "__MSG_detach-same-origin-key-shortcut__"
        },
        "detach-same-origin-across-windows": {
            "suggested_key": {
                "default": "Ctrl+Shift+L"
            },
            "description": "__MSG_detach-same-origin-across-windows-key-shortcut__"
        }
    }
}
